<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TREASURER'S RECORD"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="380dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginVertical="60dp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:hint="name of student"
        app:layout_constraintTop_toBottomOf="@+id/nameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/paymentText"
        android:inputType="text"
        tools:ignore="HardcodedText"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/paymentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment:"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/nameText"
        android:layout_marginVertical="80dp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/paymentInput"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:hint="amount paid"
        app:layout_constraintTop_toBottomOf="@+id/paymentText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/purposeText"
        android:inputType="number"
        tools:ignore="HardcodedText"
        android:importantForAutofill="no" />

    <TextView
        android:id="@+id/purposeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Purpose:"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/paymentText"
        android:layout_marginVertical="80dp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/purposeInput"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:hint="reason of payment"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/purposeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/addButton"
        android:inputType="text"
        tools:ignore="HardcodedText"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/purposeInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,SpUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>